<project name="JSlider" default="build" basedir=".">

  	<property name="app.name"      	value="JSlider"/>
	<property name="src" 			value="src"/>
	<property name="build.dir"		value="build"/>
	<property name="classes"		value="build/classes"/>
	<property name="jars" 			value="build/jars"/>
	<property name="javac" 			value="javac"/>
	<property name="javac.debug" 	value="off"/>

	<target name="release" depends="clean, compile, build" />

	<target name="clean">
		<delete dir="${build.dir}"/>
	</target>

	<target name="compile">
		<mkdir dir="${build.dir}"/>
		<mkdir dir="${classes}"/>
		<mkdir dir="${jars}"/>
		<javac 	srcdir="${src}"
				destdir="${classes}"
				source="1.4"
				target="1.4"
				debug="${javac.debug}"
				fork="true"
                includeantruntime="false"
		   		executable="${javac}"/>
	</target>

	<target name="build" depends="compile">
		<jar basedir="${classes}" destfile="${jars}/${app.name}.jar">
			<manifest>
				  <attribute name="Main-Class" value="org.eclipse.jubula.examples.extension.swing.aut.JSliderExampleAUT"/>  
		    </manifest>
		</jar>
	</target>
	
</project>
