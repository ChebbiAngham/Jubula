<section xml:id="actionClick" version="5.0" xmlns="http://docbook.org/ns/docbook"
                                        xmlns:xi="http://www.w3.org/2001/XInclude"
                                        xmlns:xl="http://www.w3.org/1999/xlink" >
  
  <title>Click</title>
  
  <para><emphasis role="strong">Click in active window</emphasis></para>
  <para>
    <itemizedlist>
      <listitem>
        <para>
          Use this action to send one or more clicks with any mouse button to the currently active window.
        </para>
      </listitem>
      <listitem>
        <para>
          You can specify where to click, how many times, and with which mouse button.
        </para>
      </listitem>
      <listitem>
        <para>
          Parameters:
          
          <itemizedlist>
            <listitem>
              <para>
                <xref linkend="number_of_clicks" xrefstyle="template:%t"/>
              </para>
            </listitem>
            <listitem>
              <para>
                <xref linkend="mouse_button" xrefstyle="template:%t"/>
              </para>
            </listitem>
            <listitem>
              <para>
                <xref linkend="x_position" xrefstyle="template:%t"/>
              </para>
            </listitem>
            <listitem>
              <para>
                <xref linkend="x_units" xrefstyle="template:%t"/>
              </para>
            </listitem>
            <listitem>
              <para>
                <xref linkend="y_position" xrefstyle="template:%t"/>
              </para>
            </listitem>
            <listitem>
              <para>
                <xref linkend="y_units" xrefstyle="template:%t"/>
              </para>
            </listitem>
          </itemizedlist>
        </para>
      </listitem>
    </itemizedlist>
  </para>
  
  <xi:include href="generalComponents.xml"/>
</section>