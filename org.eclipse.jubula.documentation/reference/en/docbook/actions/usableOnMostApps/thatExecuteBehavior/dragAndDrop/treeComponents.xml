              </para>
            </listitem>
            <listitem>
              <para>
                <xref linkend="indexpath"/>
              </para>
            </listitem>
            <listitem>
              <para>
                <xref linkend="delay_before_drop"/>
              </para>
            </listitem>
          </itemizedlist>
        </para>
      </listitem>
    </itemizedlist>
  </para>
  
