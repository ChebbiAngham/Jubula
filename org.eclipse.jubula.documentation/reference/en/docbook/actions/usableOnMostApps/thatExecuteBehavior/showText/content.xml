        </para>
      </listitem>
      <listitem>
        <para>
          This is mostly useful for demonstration purposes.
        </para>
      </listitem>
      <listitem>
        <para>
          Parameters:
          
          <itemizedlist>
            <listitem>
              <para>
                <xref linkend="text"/>
              </para>
            </listitem>
            <listitem>
              <para>
                <xref linkend="textsize"/>
              </para>
            </listitem>
            <listitem>
              <para>
                <xref linkend="time_per_word"/>
              </para>
            </listitem>
          </itemizedlist>
        </para>
      </listitem>
    </itemizedlist>
  </para>
  
