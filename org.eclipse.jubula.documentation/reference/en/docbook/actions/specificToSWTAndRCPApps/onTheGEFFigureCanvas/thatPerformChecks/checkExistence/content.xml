          <itemizedlist>
            <listitem>
              <para>
                <xref linkend="source_text_path" xrefstyle="template:%t"/>
              </para>
            </listitem>
            <listitem>
              <para>
                <xref linkend="source_operator" xrefstyle="template:%t"/>
