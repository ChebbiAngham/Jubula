<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>jubula</artifactId>
		<groupId>org.eclipse.jubula</groupId>
		<version>0.9.0-SNAPSHOT</version>
		<relativePath>../org.eclipse.jubula.releng</relativePath>
	</parent>
	<groupId>org.eclipse.jubula</groupId>
	<artifactId>org.eclipse.jubula.site</artifactId>
	<version>0.9.0-SNAPSHOT</version>
	<packaging>eclipse-update-site</packaging>
	<name>Jubula for Eclipse 3.6 and 3.7</name>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.2-beta-4</version>
				<configuration>
					<descriptors>
						<descriptor>assembly.xml</descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<id>make-assembly</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.6</version>
        <executions>
          <execution>
            <id>pack-and-sign</id>
            <phase>install</phase>
            <configuration>
              <target>
                <ant antfile="pack-and-sign/build.xml">
                  <property name="localRepository" value="${settings.localRepository}"/>
                  <property name="projectDir" value="${project.build.directory}"/>
                  <property name="repositoryName" value="jubula"/>
                  <property name="skipSign" value="true"/>
                  <property name="skipPromote" value="true"/>
                  <property name="version" value="${unqualifiedVersion}"/>
                  <property name="qualifier" value="${buildQualifier}"/>
                 <!--   
                  <property name="localRepository" value="${settings.localRepository}"/>
                  <property name="projectDir" value="${project.build.directory}"/>
                  <property name="repositoryName" value="${jubula-main-repository}"/>
                  
                  <property name="signDir" value="${sign-dir}"/>
                  <property name="archiveDir" value="${jubula-archive}"/>
                  <property name="siteDir" value="${jubula-site}"/>

                  <property name="mirrorsUrl" value="${mirrors-url}"/>                

                  <property name="dist" value="jubula"/>
                  <property name="filter" value="jubula"/>
                  <property name="pack200" value="${jubula-pack200}"/>
                  
                  <property name="skipPack" value="${jubula-skip-pack}"/>
                  
                  -->
                </ant>
                <echo file="${project.build.directory}/version.properties">
                  <![CDATA[
${unqualifiedVersion}
${buildQualifier}
]]>
                </echo>
              </target>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
		</plugins>
	</build>

</project>
