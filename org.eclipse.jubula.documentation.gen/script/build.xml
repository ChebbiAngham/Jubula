<project name="TexGen" default="jar" basedir="..">

	<property name="build.dir" value="build"/>
	<property name="dist.dir" value="dist"/>
	<property name="tools.lib" value="../org.eclipse.jubula.tools/lib"/>
	<property name="orbit.libs" value="../org.eclipse.jubula.rc.orbit"/>

	<path id="classpath-common">
		<fileset dir="${tools.lib}">
			<include name="**/*.jar" />
		</fileset>
		<fileset dir="${orbit.libs}">
			<include name="**/*.jar" />
		</fileset>
	</path>

	<path id="javac.classpath">
		<fileset dir="${basedir}">
			<include name="lib/*.jar"/>
		</fileset>
		<fileset dir="../org.eclipse.jubula.tools/build">
			<include name="**/*.jar"/>
		</fileset>
		<pathelement location="${build.dir}"/>
		<path refid="classpath-common">
		</path>
		<!-- append the external classpath lastly -->
		<pathelement path="${java.class.path}" />
	</path>

	<!-- - - - - - - - - - - - - - - - - - 
          target: -init                      
         - - - - - - - - - - - - - - - - - -->
	<target name="clean">
		<delete dir="${build.dir}"/>
	</target>

	<!-- - - - - - - - - - - - - - - - - - 
          target: -init                      
         - - - - - - - - - - - - - - - - - -->
	<target name="init">
		<mkdir dir="${build.dir}"/>
		<mkdir dir="${dist.dir}"/>
		<ant antfile="../org.eclipse.jubula.tools/buildScript.xml" target="jar" inheritall="false">
			<reference refid="classpath-common"/>
		</ant>
	</target>

	<!-- ================================= 
          target: compile              
         ================================= -->
	<target name="compile" depends="init" description="--> compile">
		<javac srcdir="src"
	           destdir="${build.dir}"
      	       debug="on">
			<classpath refid="javac.classpath"/>
		</javac>
	</target>


	<!-- ================================= 
          target: jar              
         ================================= -->
	<target name="jar" depends="compile" description="--> jar">
		<jar basedir="${build.dir}" 
		     destfile="${dist.dir}/texgen.jar"
                     includes="org/eclipse/jubula/documentation/gen/**">
			<manifest>
				<attribute name="Built-By" value="BREDEX Software GmbH"/>
				<attribute name="Main-Class" value="org.eclipse.jubula.documentation.gen.TexGen"/>
			</manifest>
		</jar>
	</target>

</project>